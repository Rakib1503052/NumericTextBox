<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        xmlns:ntb="https://github.com/Rakib1503052/NumericTextBox/"
        mc:Ignorable="d"
        Title="TextBox Test" Height="280" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Input" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>
        <Label Content="Value" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>

        <Label Content="Int" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>
        <Label Content="Float" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>
        <Label Content="UInt" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>
        <Label Content="Hex" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0"/>

        <ntb:IntTextBox x:Name="IntBox" Grid.Row="1" Grid.Column="1" Margin="2" FontSize="14" VerticalContentAlignment="Center"/>
        <ntb:FloatTextBox x:Name="FloatBox" Grid.Row="2" Grid.Column="1" Margin="2" FontSize="14" VerticalContentAlignment="Center" Scientific="True"/>
        <ntb:UIntTextBox x:Name="UIntBox" Grid.Row="3" Grid.Column="1" Margin="2" FontSize="14" VerticalContentAlignment="Center"/>
        <ntb:HexTextBox x:Name="HexBox" Grid.Row="4" Grid.Column="1" Margin="2" FontSize="14" VerticalContentAlignment="Center"/>

        <TextBlock x:Name="IntVal" Grid.Row="1" Grid.Column="2" Margin="2" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock x:Name="FloatVal" Grid.Row="2" Grid.Column="2" Margin="2" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock x:Name="UIntVal" Grid.Row="3" Grid.Column="2" Margin="2" FontSize="14" VerticalAlignment="Center"/>
        <TextBlock x:Name="HexVal" Grid.Row="4" Grid.Column="2" Margin="2" FontSize="14" VerticalAlignment="Center"/>

    </Grid>
</Window>
